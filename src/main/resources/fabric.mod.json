{
    "schemaVersion": 1,
    "id": "${id}",
    "version": "${version}",
    "name": "${name}",
    "description": "One Mod to rule them all, One Mod to find them, One Mod to bring them all and in the darkness bind them.",
    "authors": [
        "JohanVonElectrum", "ArtikGz"
    ],
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.koralix.oneforall.Initializer"
        ],
        "client": [
            "com.koralix.oneforall.ClientInitializer"
        ],
        "server": [
            "com.koralix.oneforall.ServerInitializer"
        ]
    },
    "mixins": [
        "${id}.mixins.json",
        "${id}.features.mixins.json",
        {
            "config": "${id}.client.mixins.json",
            "environment": "client"
        },
        {
            "config": "${id}.server.mixins.json",
            "environment": "server"
        }
    ],
    "accessWidener": "${id}.accesswidener",
    "depends": {
        "fabricloader": ">=0.15.0",
        "minecraft": "${minecraft_dependency}"
    }
}